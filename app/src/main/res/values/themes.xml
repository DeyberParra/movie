<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/dosis_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="nameApp" parent="Theme.Movie">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/oswald</item>
        <item  name="android:layout_margin">8dp</item>
    </style>

    <style name="thumb_user">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item  name="android:layout_margin">8dp</item>
    </style>

    <style name="name_user">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/design_default_color_secondary_variant</item>
    </style>

    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#F00</item>
    </style>

    <style name="title" parent="Theme.Movie">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
        <item name="android:textColor">@color/design_default_color_secondary_variant</item>
    </style>

    <style name="subtitle" parent="Theme.Movie">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/design_default_color_secondary</item>
    </style>

</resources>